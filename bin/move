#!/usr/bin/env ruby

require_relative '../lib/move.rb'

puts "Welcome to Tic Tac Toe!"
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
puts "Where would you like to go? (1-9)"
input = gets.strip
index = input_to_index(input)
until (index < 1 || index > 9)
  puts "Invalid Move! Try again."
  input = gets.strip
else
  move(board,index)
  display_board(board)
end
